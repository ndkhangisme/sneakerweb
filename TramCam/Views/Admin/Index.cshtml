@model IEnumerable<TramCam.Models.Sneaker>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sneaker List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                    <strong>@item.TenGiay</strong>
                </div>
                <div class="panel-body">
                    <p><strong>Tên:</strong> @item.TenGiay</p>
                    <p><strong>Loại:</strong> @item.MaLoai</p> 
                    <p><strong>Mô tả:</strong> @item.MoTa</p>
                    <p><strong>Giá:</strong> @item.Gia</p>
                    <p><img src="@item.Hinh" width="300" /></p>
                </div>



                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <a href="#" class="btn btn-primary">Order</a>
                        @Html.ActionLink("Detail", "Detail", new { id = item.MaGiay }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaGiay }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaGiay }, new { @class = "btn btn-success" })
                    </div>
                </div>

            </div>
        </div>
    }
</div>

